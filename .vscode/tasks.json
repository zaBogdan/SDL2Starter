{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "build",
        "command": "make",
        "args": [
          "-lSDL2",
        ],
        "options": {
          "cwd": "${workspaceFolder}",
          "env": {
            "LIBRARY_PATH": "$LIBRARY_PATH:/opt/homebrew/lib"
          }
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Builds our program using the existing Makefile"
      }
    ],
    "version": "2.0.0"
  }